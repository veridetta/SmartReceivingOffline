<!-- item_product.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_15sdp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rack Nomor 2"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNomorPenerimaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item : FDR-xx-xx"
            android:textSize="@dimen/_11sdp"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvItemNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item : FDR-xx-xx"
            android:textSize="@dimen/_11sdp"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/tvJumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah : 13 Satuan"
            android:textSize="@dimen/_11sdp"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/tvPetugas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Petugas : Wawan"
            android:textSize="@dimen/_11sdp"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/tvScanAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan pada 13 Agustus 2023"
            android:textSize="@dimen/_11sdp"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:id="@+id/lyiconEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end">
                <LinearLayout
                    android:id="@+id/btnHapus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:backgroundTint="@color/secondaryColor"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/ic_delete"
                        app:tint="@color/black"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>