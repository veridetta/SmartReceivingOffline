<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentView"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Background image full width and height -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:src="@color/primaryColor"
                android:scaleType="centerCrop" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@android:color/transparent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Card view with white background -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_380sdp"
                        android:layout_marginTop="50dp"
                        android:padding="@dimen/_8sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/top_rounded_bg">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_rounded"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvJudul"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tambah Barang"
                                android:paddingTop="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:textSize="@dimen/_30sdp"
                                android:textStyle="bold" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_rounded"
                                    android:backgroundTint="@color/primaryColorLight"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:src="@drawable/ic_item"
                                        app:tint="@color/primaryColorDark"
                                        android:layout_margin="@dimen/_4sdp"
                                        android:layout_gravity="center_vertical"

                                        android:layout_marginRight="@dimen/_5sdp"/>

                                    <androidx.appcompat.widget.AppCompatSpinner
                                        android:id="@+id/spMerek"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:layout_weight="1"
                                        android:spinnerMode="dialog"
                                        android:layout_gravity="center_vertical"
                                        android:background="@null" />

                                </LinearLayout>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_rounded"
                                    android:backgroundTint="@color/primaryColorLight"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:src="@drawable/ic_item"
                                        app:tint="@color/primaryColorDark"
                                        android:layout_margin="@dimen/_4sdp"
                                        android:layout_gravity="center_vertical"

                                        android:layout_marginRight="@dimen/_5sdp"/>

                                    <androidx.appcompat.widget.AppCompatSpinner
                                        android:id="@+id/spJenis"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:layout_weight="1"
                                        android:spinnerMode="dialog"
                                        android:layout_gravity="center_vertical"
                                        android:background="@null" />

                                </LinearLayout>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_rounded"
                                    android:backgroundTint="@color/primaryColorLight"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:src="@drawable/ic_item"
                                        app:tint="@color/primaryColorDark"
                                        android:layout_margin="@dimen/_4sdp"
                                        android:layout_gravity="center_vertical"

                                        android:layout_marginRight="@dimen/_5sdp"/>

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etNama"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:hint="Nama Item"
                                        android:inputType="text"
                                        android:background="@null" />

                                </LinearLayout>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_rounded"
                                    android:backgroundTint="@color/primaryColorLight"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:src="@drawable/ic_unit"
                                        app:tint="@color/primaryColorDark"
                                        android:layout_margin="@dimen/_4sdp"
                                        android:layout_gravity="center_vertical"

                                        android:layout_marginRight="@dimen/_5sdp"/>

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etSatuan"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:hint="Satuan"
                                        android:inputType="text"
                                        android:background="@null" />

                                </LinearLayout>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_rounded"
                                    android:backgroundTint="@color/primaryColorLight"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:src="@drawable/ic_item_all"
                                        app:tint="@color/primaryColorDark"
                                        android:layout_margin="@dimen/_4sdp"
                                        android:layout_gravity="center_vertical"

                                        android:layout_marginRight="@dimen/_5sdp"/>

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etPerRak"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:hint="Jumlah Per Rak"
                                        android:inputType="number"
                                        android:background="@null" />

                                </LinearLayout>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_rounded"
                                    android:backgroundTint="@color/primaryColorLight"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:src="@drawable/ic_qr"
                                        app:tint="@color/primaryColorDark"
                                        android:layout_margin="@dimen/_4sdp"
                                        android:layout_gravity="center_vertical"

                                        android:layout_marginRight="@dimen/_5sdp"/>

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etQr1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:hint="QR/BAR CODE 1"
                                        android:inputType="text"
                                        android:background="@null" />

                                </LinearLayout>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_rounded"
                                    android:backgroundTint="@color/primaryColorLight"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:src="@drawable/ic_qr"
                                        app:tint="@color/primaryColorDark"
                                        android:layout_margin="@dimen/_4sdp"
                                        android:layout_gravity="center_vertical"

                                        android:layout_marginRight="@dimen/_5sdp"/>

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etQr2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:hint="QR/BAR CODE 2 (OPTIONAL)"
                                        android:inputType="text"
                                        android:background="@null" />

                                </LinearLayout>
                            </com.google.android.material.textfield.TextInputLayout>
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnSimpan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Simpan"
                                android:textSize="@dimen/_15sdp"
                                android:layout_marginTop="16dp"
                                android:textColor="@color/white"
                                android:padding="@dimen/_8sdp"
                                android:backgroundTint="@color/secondaryColorDark"
                                android:background="@drawable/bg_rounded" />
                            <ProgressBar
                                android:id="@+id/progressBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:visibility="gone" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_35sdp"
                android:gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_40sdp"
                    android:layout_gravity="center_horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/white">
                        <ImageView
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:src="@drawable/ic_logo"
                            android:layout_gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/bg_circle"
        android:src="@drawable/ic_back"
        app:tint="@color/alternativeColor"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:backgroundTint="@color/white"/>
</RelativeLayout>
